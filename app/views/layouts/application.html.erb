<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
         
 		<title>Latergram</title>
  </head>

  <body>

 <% if user_signed_in? %>
	 <header class="container">
		<nav class="header">
			<ul class="nav nav-pills pull-right">
				<li class="active"> <%= link_to 'Home', root_path %></li>
				<li> <%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
			</ul>
			<h3 class="text-muted">.Latergram</h3>
		</nav>
	</header>
<% else %>
	<header class="container">
		<nav class="header">
			<ul class="nav nav-pills pull-right">
				<li> <%= link_to(root_path) do %>
				<span class="glyphicon glyphicon-home"></span>
					Home
				<% end %>
				</li>
		   		<li> <%= link_to('#', class:"btn btn-lg btn-success", role: "button", data: {toggle: "modal", target: "#signinModal" }) do %>
					<span class="glyphicon glyphicon-user"></span>
						Sign in
					<% end %>
				</li>
			</ul>
			<h3 class="text-muted">.Latergram</h3>
		</nav>
	</header>
<% end %>

      <div class="jumbotron">
        <h1>The number one photo sharing site</h1>
        <p class="lead">Why post now when you can post later</p>

        <p> <%= link_to('#', class:"btn btn-lg btn-success", role:"button", data: {toggle: "modal", target: "#myModal" }) do %>
			<span class="glyphicon glyphicon-camera"></span>
				Add post
			<% end %>
	
         <%= link_to('#', class:"btn btn-lg btn-success", role:"button", data: {toggle: "modal", target: "#signupModal" }) do %>
			<span class="glyphicon glyphicon-pencil"></span>
				Sign up today
			<% end %>
		</p>

      </div>
		 	<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

      <%= yield %>

      <div class="footer">
      
      </div>
     
    </div> 



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

        <h4 class="modal-title" id="myModalLabel">Upload .latergram now</h4>
      </div>
      <div class="modal-body">
      <%= bootstrap_form_for @new_post, html: { multipart: true } do |f| %>

      <%= f.text_field :title %>

      <%= f.text_field :tag_list, data: {role:'tagsinput'} %>

      <%= f.text_field :address %>

      <%= f.file_field :picture %>  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary"><%= f.submit 'Add post' %></button>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

        <h4 class="modal-title" id="myModalLabel">Sign up today</h4>
      </div>
      <div class="modal-body">

    <%= bootstrap_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
    <br />
      <%= f.email_field :email, autofocus: true %>
    <br />
      <%= f.text_field :username, autofocus: true %>
       <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i>
       <% end %>
       <br/>
        <%= f.password_field :password, autocomplete: "off" %>
<br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary"><%= f.submit 'Sign up' %></button>
      </div>
      <% end %>
    </div>
  </div>
</div>


 <div class="modal fade" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

        <h4 class="modal-title" id="myModalLabel">Sign in</h4>
      </div>
      <div class="modal-body">

    <%= bootstrap_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
<br />
      <%= f.email_field :email, autofocus: true %>
<br />
      <%= f.text_field :username, autofocus: true %>
<br />
      <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary"><%= f.submit 'Sign in' %></button>
      </div>
      <% end %>
    </div>
  </div>
</div>
 <script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
    


