<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
         
 		<title>Latergram</title>
  </head>

  <body>

 <% if user_signed_in? %>
	 <header class="container">
		<nav class="header">
			<ul class="nav nav-pills pull-right">
				<li class="active"> <%= link_to 'Home', root_path %></li>
				<li> <%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
			</ul>
			<h3 class="text-muted">.Latergram</h3>
		</nav>
	</header>
<% else %>
	<header class="container">
		<nav class="header">
			<ul class="nav nav-pills pull-right">
				<li> <%= link_to(root_path) do %>
				<span class="glyphicon glyphicon-home"></span>
					Home
				<% end %>
				</li>
		   		<li> <%= link_to('#', class:"btn btn-lg btn-success", role: "button", data: {toggle: "modal", target: "#signinModal" }) do %>
					<span class="glyphicon glyphicon-user"></span>
						Sign in
					<% end %>
				</li>
			</ul>
			<h3 class="text-muted">.Latergram</h3>
		</nav>
	</header>
<% end %>

      <div class="jumbotron">
        <h1>The number one photo sharing site</h1>
        <p class="lead">Why post now when you can post later</p>

        <p> <%= link_to('#', class:"btn btn-lg btn-success", role:"button", data: {toggle: "modal", target: "#myModal" }) do %>
			<span class="glyphicon glyphicon-camera"></span>
				Add post
			<% end %>
	
         <%= link_to('#', class:"btn btn-lg btn-success", role:"button", data: {toggle: "modal", target: "#signupModal" }) do %>
			<span class="glyphicon glyphicon-pencil"></span>
				Sign up today
			<% end %>
		</p>

      </div>
		 	<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

      <%= yield %>
      <%= render "layouts/add_post" %>
      <%= render "layouts/sign_up" %>
      <%= render "layouts/sign_in" %>

      <div class="footer">
      
      </div>
     
    </div> 

    


